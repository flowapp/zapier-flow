{
  "name": "zapier-flow",
  "version": "0.3.0",
  "description": "An app to connect the Flow API to Zapier.",
  "repository": "josiahwiebe/zapier-flow",
  "author": "Josiah Wiebe <hi@jwie.be>",
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.6.0"
  },

  "dependencies": {
    "lint-staged": "^8.1.5",
    "zapier-platform-core": "8.0.1"
  },

  "devDependencies": {
    "@zapier/eslint-plugin-zapier": "^9.0.0",
    "eslint": "^5.15.1",
    "husky": "^1.3.1"
  },

  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },

  "scripts": {
    "lint:js": "$(npm bin)/eslint *.js triggers resources --cache"
  },

  "lint-staged": {
    "*.js": "npm run lint:js"
  }
}
